<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="miky_user.mailer.user" class="Miky\Bundle\UserBundle\Mailer\UserMailer">
            <argument type="service" id="mailer"/>
            <argument type="service" id="router"/>
            <argument type="service" id="templating"/>
            <argument type="service" id="translator"/>
            <argument>%mail.no_reply%</argument>
        </service>
        <service id="miky_user.predefined_mail.user" class="Miky\Bundle\UserBundle\Mailer\PredefinedMail\UserPredefinedSchema">
           <tag name="miky_mail.group_predefined_schema" alias="user"/>
        </service>

    </services>
</container>