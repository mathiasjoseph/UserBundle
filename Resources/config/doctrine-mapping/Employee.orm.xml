<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Miky\Bundle\UserBundle\Model\Employee">

        <field name="lastname" column="lastname" type="string" length="180" nullable="true"/>
        <field name="firstname" column="firstname" type="string" length="180" nullable="true"/>
        <field name="gender"  type="string" nullable="true"/>
        <field name="dateOfBirth"  type="datetime" nullable="true"/>

    </mapped-superclass>

</doctrine-mapping>