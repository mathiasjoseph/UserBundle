{% extends "@MikyApp/layout.html.twig" %}

{% block content %}


    <div class="container">
        <div class="col-md-4 col-md-offset-4">

                {{ form_start(form, {'action': path('miky_app_customer_resetting_reset', {'token': token } ) }) }}
               {{ form_errors(form.new.first) }}
            {{ form_errors(form.new.second) }}
                <div class="panel panel-default login" style="margin-top: 50px;">
                    <div class="panel-heading"><h3 style="margin-top:10px; font-weight: normal">Mot de passe oubli√©</h3></div>
                    <div class="panel-body text-center">

                        <div class="form-group">
                            <label>{{ form_label(form.new.first) }}:</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
                                 {{ form_widget(form.new.first, {"attr": {"class": "form-control" }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.new.second) }}:</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.new.second, {"attr": {"class": "form-control" }}) }}
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer"><button class="btn btn-default" type="submit">{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</button></div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}
