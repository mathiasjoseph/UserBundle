{% extends "@MikyApp/layout.html.twig" %}

{% block content %}
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            {{ form_start(form) }}
            {% if not form.vars.valid %}
            <div class="alert alert-danger alert-error">
                {{ form_errors(form.username) }}
                {{ form_errors(form.email) }}
                {{ form_errors(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            {% endif %}
                   {{ form_widget(form._token) }}

                <div class="panel panel-default login" style="margin-top: 50px;">
                    <div class="panel-heading"><h3 style="margin-top:10px; font-weight: normal">Inscription</h3></div>
                    <div class="panel-body text-center">
                        <div class="form-group">
                            <label>NOM D'UTILISATEUR:</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.username, { 'attr': {"class": "form-control", "placeholder": "Entrez le nom d'utilisateur"}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>EMAIL:</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.email, { 'attr': {"class": "form-control", "placeholder": "Entrez l'adresse email"}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>MOT DE PASSE:</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon2"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.plainPassword.first, { 'attr': {"class": "form-control", "placeholder": "Entrer le mot de passe"}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>CONFIRMER:</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon2"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.plainPassword.second, { 'attr': {"class": "form-control", "placeholder": "RÃ©peter le mot de passe"}}) }}
                            </div>
                        </div>
                        <div class="form-group">

                            <label>{{ form_widget(form.newsletter, { 'attr': {"class": ""}}) }} Recevoir toutes les news miky</label>



                        </div>

                    </div>
                    <div class="panel-footer"><button class="btn btn-default" type="submit">Inscrivez-vous maintenant</button></div>
                </div>
            </form>
        </div>
    </div>

{% endblock content %}
